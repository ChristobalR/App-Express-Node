const textoCompleto = "Your IP:  <%= ip %>\nUser Agent:  <%= userAgent %>\nHash:  <%= pass2 %>\nUser:  <%= nombreUsuario %>";
  const textoElemento = document.getElementById('texto');
  let indice = 0;
  const intervalo = 10;

  function mostrarLetraPorLetra() {
    if (indice < textoCompleto.length) {
      textoElemento.textContent += textoCompleto[indice];
      indice++;
      setTimeout(mostrarLetraPorLetra, intervalo);
    }
  }

  mostrarLetraPorLetra();</script>




